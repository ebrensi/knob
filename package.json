{
  "name": "knob",
  "version": "1.1.0",
  "description": "Canvas based knob widget for the browser",
  "directories": {
    "example": "example"
  },
  "source": "src/Knob.ts",
  "browser": "dist/Knob.js",
  "module": "dist/Knob-esm.js",
  "types": "dist/Knob.d.ts",
  "targets": {
    "browser": {
      "optimize": true
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "prettier -w **.*; parcel build",
    "prepare": "npm run build",
    "example": "parcel serve --port=9966 src/example/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mmckegg/knob.git"
  },
  "keywords": [
    "knob",
    "dial",
    "canvas",
    "touch"
  ],
  "author": "Matt McKegg",
  "license": "MIT",
  "devDependencies": {
    "@parcel/packager-ts": "^2.4.1",
    "@parcel/transformer-typescript-types": "^2.4.1",
    "@swc/helpers": "^0.3.8",
    "parcel": "^2.4.1",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  }
}
